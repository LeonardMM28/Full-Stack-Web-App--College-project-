<html class="video" lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit a post</title>
    <link rel="stylesheet" type="text/css" href="../../public/css/style.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Righteous&display=swap"
      rel="stylesheet"
    />
    <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
  />
  </head>
  <body class="postVideo">
    <header>
      <h1>Edit a post</h1>
      <div class="dropdown">
        <button class="dropbtn">
          <img src="../../public/images/menuH.png" alt="menu" class="menImg" />
          <i class="caret-down"></i>
        </button>
        <div class="dropContent">
          <nav>
            <ul>
              <li>
                <a href="/" class="a1">Main Page</a>
              </li>
              <li>
                <a href="/users/profile/{{user.userId}}" class="a2">Profile</a>
              </li>
            </ul>
          </nav>
        </div>
      </div>
    </header>
    {{#if isLoggedIn}}
      <form action="/users/logout" method="post" class="logO">
        <h2>Logged as {{user.username}}</h2>
        <button type="submit">Log Out</button>
      </form>
    {{else}}
      <form action="#" method="post" class="logO" id="logIN">
        <button type="submit"><a href="/login">Login</a></button>
      </form>
    {{/if}}
    <main>
      <div class="menButton">
        <input type="checkbox" id="active" />
        <label for="active" class="menu-btn"><span></span></label>
        <label for="active" class="close"></label>
        <div class="wrapper">
          <nav>
            <ul>
              <li>
                <a href="/" class="a1">Main Page</a>
              </li>
              <li>
                <a href="/users/profile/{{user.userId}}" class="a2">Profile</a>
              </li>
            </ul>
          </nav>
        </div>
      </div>
      <form
        id="postInfo"
        action="/posts/edit/{{post.id}}"
        method="post"
        enctype="application/x-www-form-urlencoded"
      >
        <div class="postInfo">
          <div class="imgg">
            <h2>Post to edit:</h2>
            <img src="/{{post.thumbnail}}" alt="{{post.title}}" />
          </div>
          <div class="title">
            <div>
              <label for="title">Post title:</label>
            </div>
            <div>
              <input
                type="text"
                name="title"
                id="title"
                value="{{post.title}}"
                placeholder="Write the title"
                required
              />
            </div>
            {{#private post.private}}
              <div class="switch-holderP">
                <div class="switch-label">
                  <span>Private</span>
                </div>
                <div class="switch-toggle">
                  <input type="checkbox" id="private" name="private" value="0"/>
                  <label for="private"></label>
                </div>
              </div>
            {{else}}
              <div class="switch-holderNP">
                <div class="switch-label">
                  <span>Private</span>
                </div>
                <div class="switch-toggle">
                  <input
                    type="checkbox"
                    id="private"
                    name="private"
                    value="1"
                  />
                  <label for="private"></label>
                </div>
              </div>
            {{/private}}
          </div>
          <div class="descrip">
            <div>
              <label for="description">Description:</label>
            </div>
            <div>
              <input
                name="description"
                id="description"
                value="{{post.description}}"
                placeholder="Write a short description"
                required
              />
            </div>
          </div>
          <div class="checkB">
            <div class="policy">
              <label for="check">Accept Acceptable Use Policy for uploading
                videos:</label>
              <input type="checkbox" name="check" id="check" required />
            </div>

          </div>

          <button><i id="editSub"class="fa-solid fa-square-arrow-up-right"></i></button>

        </div>
      </form>
    </main>
    {{> footer}}
  </body>
</html>
