<html lang="en" class="index">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Main Menu</title>
    <link rel="stylesheet" type="text/css" href="../public/css/style.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Righteous&display=swap"
      rel="stylesheet"
    />
    <script defer src="../public/js/index.js"></script>
  </head>
  <body class="ind">
    <header>
      <h1>Welcome to the Main Page</h1>
      <div class="dropdown">
        <button class="dropbtn">
          <img src="../public/images/menuH.png" alt="menu" class="menImg" />
        </button>
        <div class="dropContent">

          {{#if isLoggedIn}}
            <nav>
              <ul>
                <li>
                  <a href="/postVideo" class="a1">Post a video</a>
                </li>
                <li>
                  <a href="/viewPost" class="a2">View post</a>
                </li>
                <li>
                  <a href="/profile" class="a3">Profile</a>
                </li>
              </ul>
            </nav>
          {{else}}
            <nav>
              <ul>
                <li>
                  <a href="/login" class="a1">Login</a>
                </li>
                <li>
                  <a href="/signUp" class="a2">Sign up</a>
                </li>
              </ul>
            </nav>
          {{/if}}
        </div>

      </div>
    </header>
    {{#if isLoggedIn}}
      <form action="/users/logout" method="post" class="logO">
        <button type="submit">Log Out</button>
      </form>
    {{/if}}
    <main>
      <div class="menButton">
        <input type="checkbox" id="active" />
        <label for="active" class="menu-btn"><span></span></label>
        <label for="active" class="close"></label>
        <div class="wrapper">

          {{#if isLoggedIn}}
            <nav id="buttons">
              <ul>
                <li>
                  <a href="/postVideo" class="a1">Post a video</a>
                </li>
                <li>
                  <a href="/viewPost" class="a2">View post</a>
                </li>
                <li>
                  <a href="/profile" class="a3">Profile</a>
                </li>
              </ul>
            </nav>
          {{else}}
            <nav id="buttons">
              <ul>
                <li>
                  <a href="/login" class="a1">Login</a>
                </li>
                <li>
                  <a href="/signUp" class="a2">Sign up</a>
                </li>
              </ul>
            </nav>
          {{/if}}

        </div>
      </div>
      <div id="content">

      </div>
      <div id="No"></div>
    </main>
    <footer>
      <h3>Leonardo Meza Martinez Â© 2023 CS SFSU</h3>
    </footer>
  </body>
</html>